{
  "type": "module",
  "description": "GitHub Action for turning working directory changes into pull request review suggestions",
  "scripts": {
    "build": "ncc build index.js"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@octokit/action": "^6.0.6",
    "parse-git-diff": "^0.0.14"
  },
  "devDependencies": {
    "@octokit/webhooks-types": "^7.3.2",
    "@vercel/ncc": "^0.38.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      ["@semantic-release/github", { "draftRelease": true }],
      "semantic-release-plugin-github-breaking-version-tag"
    ]
  }
}
