{
  "type": "module",
  "description": "GitHub Action for turning working directory changes into pull request review suggestions",
  "scripts": {
    "build": "ncc build index.js"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@octokit/action": "^5.0.2",
    "parse-git-diff": "^0.0.13"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": false
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "semantic-release-plugin-github-breaking-version-tag"
    ]
  }
}
